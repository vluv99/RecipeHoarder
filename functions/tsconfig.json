{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "plugins": [
            {
                "transform": "ts-transformer-keys/transformer"
            }
        ]
    },
    "compileOnSave": true,
    "include": [
        "src",
        "src/recipeImport/localTesting.ts"
    ]
}
